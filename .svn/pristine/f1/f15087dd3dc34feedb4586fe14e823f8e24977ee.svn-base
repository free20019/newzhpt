<script>
(function (Vue, _, $) {
	var vm = new Vue({
		el: '#root',
		data: function () {
			var _this = this;
			return {
				query: {
				},
				table: {
					fields: [
						{name: 'ID', title: '序号', width: 40, align: 'center'},
						{name: 'username', title: '姓名', width: 100, align: 'center'},
						{name: 'userid', title: '', width: 100, align: 'center',visible:false},
						{name: 'menus', title: '权限', width: 160, align: 'center'},
						{
	        				title: '修改',
	                        itemTemplate: function(_, item) {
	                        	var style = {};
	                            return [
									$('<a>').addClass('btn btn-primary btn-xs').text('修改').css(style).on('click', function () {
										$('#qxgl-dialog').modal('show');
										var $form = $("#clcx-dialog-form");
										$form.find("input").prop("checked","false");
										$('#qxgl-dialog-save').on('click', function () {
											var $name = $form.find("input:checked");
											var arr = "",brr = "";
											$name.each(function(index,ar){
												name = $(ar).attr("name");
												names = $(ar).prev().html();
												names = names.substr(0, names.length - 1);
												arr += name+",";
												brr += names+",";
											});
											$.ajax({
												url : "../../claq/qxglEdit",
												type : 'post',
												data : {
													id : item.userid,
													qx : arr,
													qxname : brr
												},
												dataType : 'json',
												success : function(data) {
													console.log(data)
													if (data.code == 0) {
														layer.msg("成功");
														_this.getAlarmManageList();
													} else {
														layer.msg("失败");
													}
													$('#qxgl-dialog').modal('hide');
												},
												error : function(data) {
													layer.closeAll();
												}
											})
										})
									})
								]
	                        },
	                        align: "center",
	                        width: 50
						}
					]
				}
			}
		},
		created: function () {
			var _this = this;
			this.$nextTick(function () {
			});
		},
		mounted: function () {
			var _this = this;
			this.$nextTick(function () {
				_this.getAlarmManageList();
			});
		},
		methods: {
			getAlarmManageList:function(){
				var _this=this;
				$('#qxglTable').jsGrid({
					width: '100%',
					height: '100%',
					autoload: true,
					pageSize: 15000,
					pageIndex: 1,
					paging: true,
					pageLoading: true,
					controller: {
	                    loadData: function(filter) {
	                    	var d = $.Deferred();
	                    	var a = _this.init(filter, function(item){
	                    		d.resolve(item);
	                    	})
	                    	return d.promise();
	                    }
	                },
					fields: _this.table.fields,
					pagerContainer: null,
				    pageButtonCount: 5,
				    pagerFormat: "{first} {prev} {pages} {next} {last} {pageIndex} of {pageCount}",
				    pagePrevText: "上一页",
				    pageNextText: "下一页",
				    pageFirstText: "第一页",
				    pageLastText: "末页",
				    pageNavigatorNextText: ">",
				    pageNavigatorPrevText: "<"
				});
			},
			init: function (filter,callback) {
				var startIndex = (filter.pageIndex - 1) * filter.pageSize;
				var xm = $('#xm').val();
				jqxhr=$.ajax({
					type: "POST",
					url:"../../claq/qxgl",
					data:{
						"username":xm,
						"pageIndex":filter.pageIndex,
	     				"pageSize":filter.pageSize
					},
					dataType: 'json',
					timeout : 3600000,
					success:function(json){
						console.log(json);
						var qxglData = [];
	            		all = json.data[0].count;
	     				re = json.data[0].datas;
	         			if(json.code == 0){
	         				for(var i = 0; i< re.length ;i++){
	         					var rs={};
	         					rs.ID = startIndex+i+1;
	         					rs.userid = re[i].id;
	         					rs.username =  re[i].username;
	         					rs.menus =  re[i].menus;
	         					qxglData.push(rs);
	         				}
	         				return callback({
	                            data: qxglData,
	                            itemsCount: all
	                        });
	         			}else{
	        			}
					}
				});
			},
			handleQueryClick: function () {
				this.getAlarmManageList();
			},
			handleChangeClick: function () {
			}
		}
	})
})(Vue, _, jQuery);
</script>
