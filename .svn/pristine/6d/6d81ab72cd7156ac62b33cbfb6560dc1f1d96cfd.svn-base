						{id: 'y47', title: '23:30', width: 120},
					],
					tableData: [],
				}
			},
			mounted: function () {
				var _this = this;
				this.$nextTick(function () {
					$('.scrollbar-macosx').scrollbar();
					
					$('#areaName').select2({
			            language: "zh-CN",
			            width: '206px',
			            allowClear: true,
			            data: []
		            }).on('change', function() {
		                _this.query.area = this.value;
		            });

					$('#datetime').datetimepicker(dateDefaultOption).on('changeDate', function (e) {
						_this.query.date = moment(e.date).format('YYYY-MM-DD');
					});
					_this.query.date = moment().format('YYYY-MM-DD');

					_this.getAreaList();
					_this.getZdqyclList();
				});
			},
			methods: {
				getAreaList: function() {
					var _this = this;
					$.ajax({
						type: 'POST',
						url: '../../claq/qyarea',
						dataType: 'json',
						timeout: 3600000
					}).then(function(res) {
						 console.log(res)
						select2('#areaName', {
							width: '206px',
							allowClear: true,
							data: _.map(res.dataarea, function (item) {
								return {id: item.id, text: item.name}
							}) || []
						});
					})
				},
				getZdqyclList: function() {
			          var _this = this;
			          var query = this.query;
			          _this.loading = layer.load(1);
			          $.ajax({
			            type: 'POST',
			            url: '../../otta/clmxinfo',
			            data: {
			              postData: JSON.stringify({
			                id: query.area,
			                time: query.date,
			                speed:query.csz
			              })
			            },
			            dataType: 'json',
			            timeout: 3600000
			          }).then(function (res) {
			        	  console.log(res)
			        	  layer.close(_this.loading);
			             _this.tableData = res.datas || []
							
			          })
		        },
				handleQueryClick: function() {
					this.getZdqyclList();
				},
				handleExportClick: function() {
					// 导出
					var _this = this;
          			var query = this.query;
					var data = {
						 	id: query.area,
			                time: query.date,
			                speed:query.csz
					};
					url = "../../otta/clmxexcle?postData=" + encodeURI(JSON.stringify(data)) , window.open(url);
				}
			},
			components: {
				'bs-table': BSTable
			}
		})
	})(Vue, _, jQuery, BSTable);
</script>
</body>
</html>